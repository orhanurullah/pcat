<%- include('partials/_header.ejs') -%>
			
			<%- include('partials/_single-navigation') -%>
			
		<!-- Page content -->
		<div class="container border-top pt-3">
			<div class="mx-auto tm-content-container">
				<main>
					<div class="row mb-2">
						<div class="col-auto mx-auto">
							<a href="/photos/update/<%= photo._id %>"><button type="button" class="btn btn-primary">Update</button></a>
							<a href="/photos/<%= photo._id %>?_method=DELETE" type="button" class="btn btn-danger" onclick="return confirm('ARE YOU SURE')">Delete</a>
						</div>
					</div>
					
					<div class="row">
						<div class="col-auto mx-auto">
							<!-- Video player 1422x800 -->
							<img src="<%= photo.photo != '' ? photo.photo : 'img/tn-01.jpg' %>" class="img-fluid" alt="photo">
						</div>
					</div>
					<div class="row my-3 pb-5">
						<div class="col-auto mx-auto">
							<!-- Video description -->
							<div class="tm-video-description-box">
								<h2 class="mb-5 tm-video-title"><%= photo.title %> </h2>
								
								<p class="mb-4"><%= photo.description %></p>	
							</div>							
						</div>
						<div class="col-xl-4 col-lg-5">
							<!-- Share box -->
							<div class="tm-bg-gray tm-share-box">
								<h6 class="tm-share-box-title mb-4">Share this video</h6>
								<div class="mb-5 d-flex">
									<a href="" class="tm-bg-white tm-share-button"><i class="fab fa-facebook"></i></a>
									<a href="" class="tm-bg-white tm-share-button"><i class="fab fa-twitter"></i></a>
									<a href="" class="tm-bg-white tm-share-button"><i class="fab fa-pinterest"></i></a>
									<a href="" class="tm-bg-white tm-share-button"><i class="far fa-envelope"></i></a>
								</div>
								<p class="mb-4">Author: <a href="https://github.com/orhanurullah" class="tm-text-link">orhanurullah</a></p>
								<a href="#" class="tm-bg-white px-5 mb-4 d-inline-block tm-text-primary tm-likes-box tm-liked">
									<i class="fas fa-heart mr-3 tm-liked-icon"></i>
									<i class="far fa-heart mr-3 tm-not-liked-icon"></i>
									<span id="tm-likes-count">486 likes</span>
								</a>						
							</div>
						</div>
					</div>
				</main>

				<%- include('partials/_footer.ejs') -%>
</body>
</html>