<%- include('partials/_header.ejs') -%>
			
			<%- include('partials/_single-navigation') -%>

            <div id="tm-fixed-header-bg"></div> <!-- Header image -->
		</div>

		<!-- Page content -->
		<main>
			<div class="container-fluid px-0">
				<div class="mx-auto tm-content-container">					
					<div class="row mt-3 mb-5 pb-3">
						<div class="col-12">
							<div class="mx-auto tm-about-text-container px-3">
								<h2 class="tm-page-title mb-4 tm-text-primary">Update Photo</h2>
							</div>							
						</div>						
					</div>
                    <div class="mx-auto pb-3 tm-about-text-container px-3">
                        <div class="row">
                            <div class="col-12 mb-5">
                                <form 
                                action="/photos/<%= photo._id %>?_method=PUT" method="POST" class="tm-contact-form"
                                enctype="multipart/form-data" >
                                  <div class="form-group">
                                    <input type="text" name="title" class="form-control rounded-0" 
                                    value="<%= photo.title %>" required />
                                  </div>
                                  
                                  <div class="form-group">
                                    <textarea rows="8" name="description" class="form-control rounded-0" 
                                    required ><%= photo.description %></textarea>
                                  </div>
                                  <div class="form-group">
                                    <img src="<%= photo.photo %>" alt="Photo" width="50" height="50">
                                    <input type="file" name="photo" class="form-control-file rounded-0" value="<%= photo.photo %>"/>
                                  </div>
                                  <div class="form-group mb-0 mt-1">
                                    <button type="submit" class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Update</span></button>
                                  </div>
                                </form>    
                            </div>
                        </div>  
                    </div>                                      			
				</div>

				<div class="parallax-window parallax-window-2" data-parallax="scroll" data-image-src="img/contact-2.jpg"></div>

			
			</div>
		</main>

		<%- include('partials/_footer') -%>
    <script src="js/parallax.min.js"></script>    
</body>
</html>